<!DOCTYPE html>
<html>
  <head>
    <title>MusicPlayerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/users.css">
    <%= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" %>
    <% if logged_in? %>
    <div class="ui grid">
      <div class= "ui menu three column row">
        <div class="column"></div>
        <div class="header item column">
          <img src ="/assets/jukebox.png">
         </div>
       <div class="ui compact menu right">
       <div class="ui simple dropdown item">
         Menu
         <i class="dropdown icon"></i>
         <div class="menu">
           <div class="item">
             <%=link_to "View Songs", "/dashboard"%>
           </div>
           <div class="item">
             <%=button_to "Log out", {:controller => :sessions, action: "destroy", id: session[:user_id]}, :method => "delete"%>
           </div>
           <div class="item"><%=link_to "Contact Us", "/contact"%></div>
         </div>
       </div>
     </div>
      </div>
    </div>
    <%else%>
    <div class="ui grid">
      <div class= "ui menu three column row">
        <div class="column"></div>
        <div class="header item column">
          <a href="/"><img class="header-icon"  src ="/assets/jukebox.png"></a>
         </div>
       <div class="ui compact menu right">
        <div class="nontransparent">
       <div class="ui simple dropdown item">
         Menu
         <i class="dropdown icon"></i>
         <div class="menu">
           <div class="item">
             <%=link_to "Login", "/login"%>
           </div>
           <div class="item">
             <%=link_to "Sign Up", "/signup"%>
           </div>
           <div class="item">
             <%=link_to "Contact Us", "/contact"%>
           </div>
         </div>
       </div>
       </div>
     </div>
      </div>
    </div>
    <%end%>



  </head>

  <body>

    <%= yield %>
  </body>
</html>
